<%= form_with(model: gift) do |form| %>
  <% if gift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(gift.errors.count, "error") %> prohibited this gift from being saved:</h2>

      <ul>
        <% gift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-fields">

    <div>
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description, required: true %>
    </div>

    <div>
      <%= form.label :link %>
      <%= form.text_field :link, required: true %>
    </div>

    <div>
      <%= form.label :image_url %>
      <%= form.text_field :image_url %>
    </div>

    <div>
      <%= form.label :cost %>
      <%= form.text_field :cost, required: true %>
    </div>

    <div>
      <p>Splittable gifts are ones that are too big for one person to afford, or ones that you want
        to be able to buy yourself. The link should be a 'Settle Up' link or similar to allow a person to securely send
        you their contribution.</p>
      <% splittable_label = "Check this box to make this item Splittable" %>
      <div class="checkbox">
        <%= form.label :splittable, splittable_label %>
        <%= form.check_box :splittable %>
      </div>
    </div>

    <div>
      <%= form.label :ref %>
      <%= form.text_field :ref %>
    </div>

    <div class="button-container">
      <%= form.submit %>
    </div>
  </div>
<% end %>
