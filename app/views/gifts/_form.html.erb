      <h2><%= pluralize(gift.errors.count, "error") %> prohibited this gift from being saved:</h2>

      <ul>
        <% gift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-fields">


    <div>
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>

    <div>
      <%= form.label :description %>
      <%= form.text_area :description, required: true %>
    </div>

    <div>
      <%= form.label :link %>
      <%= form.text_field :link, required: true %>
    </div>

    <div>
      <%= form.label :image_url %>
      <%= form.text_field :image_url %>
    </div>

    <div>
      <%= form.label :value %>
      <%= form.text_field :value, required: true %>
    </div>

    <div>
      <%= form.label :ref %>
      <%= form.text_field :ref %>
    </div>

    <div class="button-container">
      <%= form.submit %>
    </div>
  </div>
<% end %>
